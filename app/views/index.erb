<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Slack Translator</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>Slack Translator</h1>

  <form id="mensagem-form">
    <label for="texto">Type in Portuguese:</label>
    <textarea id="texto" name="texto" required></textarea>    
    <div class="button-toast-wrapper">
    <button type="submit" form="mensagem-form">Send</button>
    <div id="toast" class="toast"></div>
  </div>
  </form>
  
  

  <div id="chat-container"></div>

  <script src="/app.js"></script>
</body>
</html>
